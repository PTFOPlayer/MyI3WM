#order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "cpu_usage"
#order += "cpu_temperature 0"
#order += "memory"
order += "volume master"
#order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "%essid (%ip)"
        format_down = ""

}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        #format_up = "E: %ip (%speed)"
        #format_up = "%essid (%ip)"
	format_up = "%essid"
        format_down = ""
}


battery 0 {
        format = "%status %percentage %remaining"
        format_down = " "
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "‚òª FULL"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}
