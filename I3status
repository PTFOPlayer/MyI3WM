tztime local {
        format = "%Y-%m-%d %H:%M:%S"
                
}



load {
        format = "%1min"
}

disk "/" {
        prefix_type = decimal
        format = " ‚õÅ %percentage_used (U:%used, F:%free) "
}

volume master {
        format = "‚ô™: %volume"
        format_muted = "‚ô™: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}



